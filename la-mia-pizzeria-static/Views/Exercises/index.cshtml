
@{
    ViewData["Title"] = "index";
    string myName = "Daniele";
    string myLastName = "Ciccarelli";

    int getSum(int num)
    {
        int sum = 0;
        for (int i = 0; i <= num; i++)
        {
            sum += i;
        }
        return sum;
    }

    int charCount (string phrase, char ch)
    {
        int freq = phrase.Count(f => (f == ch));
        return(freq);
    }
}
